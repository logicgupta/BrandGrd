<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:textSize="34sp"
        android:gravity="center"
        android:padding="6dp"
        android:layout_margin="12dp"
        android:background="@drawable/edit_text_design_simple"
        android:layout_gravity="center"
        android:text="@string/add_the_services"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/fruitCategoryCardView"
                android:clickable="true"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:src="@mipmap/fruits"
                        android:layout_width="95dp"
                        android:layout_gravity="center"
                        android:layout_height="90dp" />
                    <TextView
                        android:layout_margin="2dp"
                        android:text="FRUITS"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_margin="2dp"
                android:id="@+id/milkCardView"
                android:clickable="true"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="8dp"
                        android:src="@mipmap/milk"
                        android:layout_width="95dp"
                        android:layout_gravity="center"
                        android:layout_height="90dp" />
                    <TextView
                        android:layout_margin="2dp"
                        android:text="MILK"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_margin="2dp"
                android:id="@+id/vegetableCardView"
                android:clickable="true"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView

                        android:src="@mipmap/vegetables"
                        android:layout_width="95dp"
                        android:layout_gravity="center"
                        android:layout_height="90dp" />
                    <TextView
                        android:layout_margin="2dp"
                        android:text="VEGETABLES"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/oilAndMassaleCategoryCardView"
                android:clickable="true"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:src="@mipmap/ata"
                        android:layout_width="95dp"
                        android:layout_gravity="center"
                        android:layout_height="90dp" />
                    <TextView
                        android:layout_margin="2dp"
                        android:text="OIl and Wheat"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/bakeryCardView"
                android:clickable="true"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:src="@mipmap/bakery"
                        android:layout_width="95dp"
                        android:layout_gravity="center"
                        android:layout_height="90dp" />
                    <TextView
                        android:layout_margin="2dp"
                        android:text="BAKERY"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:clickable="true"
                android:id="@+id/poojaCardView"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:focusable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView

                        android:layout_marginTop="8dp"
                        android:src="@mipmap/pooja_need"
                        android:layout_width="95dp"
                        android:layout_gravity="center"
                        android:layout_height="80dp" />
                    <TextView
                        android:layout_margin="2dp"
                        android:text="POOJA NEEDS"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/breadandeggsCategoryCardView"
                android:clickable="true"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:src="@mipmap/bread"
                        android:layout_width="95dp"
                        android:layout_gravity="center"
                        android:layout_height="90dp" />
                    <TextView
                        android:layout_margin="2dp"
                        android:text="BREAD AND EGGS"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/beautyCardView"
                android:clickable="true"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:src="@mipmap/beauty"
                        android:layout_marginBottom="6dp"
                        android:layout_width="95dp"
                        android:layout_gravity="center"
                        android:layout_height="85dp" />
                    <TextView
                        android:layout_margin="2dp"
                        android:text="BEAUTY CARE"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:clickable="true"
                android:id="@+id/cleaningCardView"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView

                        android:src="@mipmap/clean"
                        android:layout_width="95dp"
                        android:layout_margin="4dp"
                        android:layout_gravity="center"
                        android:layout_height="90dp" />
                    <TextView
                        android:layout_margin="2dp"
                        android:text="CLEANING NEEDS"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>




    </LinearLayout>
</LinearLayout>