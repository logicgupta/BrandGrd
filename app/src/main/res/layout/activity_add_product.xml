<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Client.AddItems.AddProductActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <ImageView
                        android:id="@+id/imageUrl1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:src="@mipmap/add_product_logo"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/imageUrl2"
                        android:layout_width="0dp"
                        android:layout_margin="2dp"
                        android:src="@mipmap/add_product_logo"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <ImageView
                        android:id="@+id/imageUrl3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:src="@mipmap/add_product_logo"
                        android:layout_margin="2dp"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/imageUrl4"
                        android:layout_width="0dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:src="@mipmap/add_product_logo"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/editTextProductName"
                android:layout_width="match_parent"
                android:hint="Product Name"
                android:textSize="24sp"
                android:padding="4dp"
                android:layout_margin="8dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/editTextProductDescription"
                android:layout_width="match_parent"
                android:hint="Product Description"
                android:textSize="24sp"
                android:padding="4dp"
                android:layout_margin="8dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/editTextOriginalPrice"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="Original Price"
                    android:textSize="24sp"
                    android:padding="4dp"
                    android:inputType="number"
                    android:layout_margin="8dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/editTextDiscountPrice"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="Discount Price"
                    android:textSize="24sp"
                    android:inputType="number"
                    android:padding="4dp"
                    android:layout_margin="8dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/editTextQuatityAvailable"
                android:padding="4dp"
                android:layout_margin="8dp"
                android:textSize="24sp"
                android:hint="Quantity Available At Our Store"
                android:layout_height="wrap_content" />

                <Button
                    android:layout_width="wrap_content"
                    android:text="SUBMIT"
                    android:id="@+id/buttonSubmit"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>