<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:background="#f2f2f2"
android:orientation="vertical"
android:layout_height="match_parent"
tools:context=".View.Login.RegisterActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/addPhoto"
            android:layout_marginTop="15dp"
            android:layout_width="110dp"
            android:src="@drawable/ic_person_add_black_24dp"
            android:layout_gravity="center"
            android:layout_height="110dp" />


        <EditText
            android:id="@+id/userNameEditText"
            android:layout_marginTop="30dp"
            android:layout_width="280dp"
            android:hint="   Shop Name"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:padding="8dp"
            android:elevation="4dp"
            android:inputType="textPersonName"
            android:background="@drawable/edit_text_design_simple"
            android:layout_gravity="center"
            android:layout_height="50dp" />
        <EditText
            android:id="@+id/emailEdiText"
            android:layout_marginTop="20dp"
            android:layout_width="280dp"
            android:hint="   Email Id"
            android:background="@drawable/edit_text_design_simple"
            android:padding="8dp"
            android:elevation="4dp"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:layout_gravity="center"
            android:layout_height="50dp" />

        <EditText
            android:id="@+id/addressEdiText"
            android:layout_marginTop="20dp"
            android:layout_width="280dp"
            android:hint="   Address"
            android:background="@drawable/edit_text_design_simple"
            android:padding="8dp"
            android:elevation="4dp"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"
            android:layout_gravity="center"
            android:layout_height="50dp" />


        <EditText
            android:id="@+id/mobileEdiText"
            android:layout_marginTop="20dp"
            android:layout_width="280dp"
            android:hint="   Mobile Number"
            android:background="@drawable/edit_text_design_simple"
            android:padding="8dp"
            android:inputType="number"
            android:maxLength="10"
            android:elevation="4dp"
            android:drawableLeft="@drawable/ic_phone_in_talk_black_24dp"
            android:layout_gravity="center"
            android:layout_height="50dp" />

        <EditText
            android:id="@+id/passwordEdiText"
            android:layout_marginTop="20dp"
            android:layout_width="280dp"
            android:hint="   Password"
            android:inputType="textWebPassword"
            android:background="@drawable/edit_text_design_simple"
            android:padding="8dp"
            android:elevation="4dp"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:layout_gravity="center"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="280dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_design_login"
            android:layout_gravity="center"
            android:text="REGISTER As A Seller"
            android:elevation="4dp"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/register"
            android:layout_width="280dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Click here ,for register deliver person"
            android:elevation="4dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_height="50dp" />


    </LinearLayout>
</ScrollView>

</LinearLayout>