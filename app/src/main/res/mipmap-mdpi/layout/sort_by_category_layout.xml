<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:text="Sort By Category"
        android:gravity="center"
        android:layout_margin="4dp"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <android.support.v7.widget.CardView
                android:id="@+id/fruitCategoryCardView"
                android:clickable="true"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:src="@mipmap/fruits"
                        android:layout_width="95dp"
                        android:layout_gravity="center"
                        android:layout_height="90dp" />
                    <TextView
                        android:layout_margin="2dp"
                        android:text="FRUITS"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_margin="2dp"
                android:id="@+id/milkCardView"
                android:clickable="true"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="8dp"
                        android:src="@mipmap/milk"
                        android:layout_width="95dp"
                        android:layout_gravity="center"
                        android:layout_height="90dp" />
                    <TextView
                        android:layout_margin="2dp"
                        android:text="MILK"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_margin="2dp"
                android:id="@+id/vegetableCardView"
                android:clickable="true"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView

                        android:src="@mipmap/vegetables"
                        android:layout_width="95dp"
                        android:layout_gravity="center"
                        android:layout_height="90dp" />
                    <TextView
                        android:layout_margin="2dp"
                        android:text="VEGETABLES"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </android.support.v7.widget.CardView>

    </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <android.support.v7.widget.CardView
                android:id="@+id/oilAndMassaleCategoryCardView"
                android:clickable="true"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:src="@mipmap/ata"
                        android:layout_width="95dp"
                        android:layout_gravity="center"
                        android:layout_height="90dp" />
                    <TextView
                        android:layout_margin="2dp"
                        android:text="OIl and Wheat"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/bakeryCardView"
                android:clickable="true"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:src="@mipmap/bakery"
                        android:layout_width="95dp"
                        android:layout_gravity="center"
                        android:layout_height="90dp" />
                    <TextView
                        android:layout_margin="2dp"
                        android:text="BAKERY"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:clickable="true"
                android:id="@+id/poojaCardView"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView

                        android:layout_marginTop="8dp"
                        android:src="@mipmap/pooja_need"
                        android:layout_width="95dp"
                        android:layout_gravity="center"
                        android:layout_height="80dp" />
                    <TextView
                        android:layout_margin="2dp"
                        android:text="POOJA NEEDS"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <android.support.v7.widget.CardView
                android:id="@+id/breadandeggsCategoryCardView"
                android:clickable="true"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:src="@mipmap/bread"
                        android:layout_width="95dp"
                        android:layout_gravity="center"
                        android:layout_height="90dp" />
                    <TextView
                        android:layout_margin="2dp"
                        android:text="BREAD AND EGGS"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/beautyCardView"
                android:clickable="true"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:src="@mipmap/beauty"
                        android:layout_marginBottom="6dp"
                        android:layout_width="95dp"
                        android:layout_gravity="center"
                        android:layout_height="85dp" />
                    <TextView
                        android:layout_margin="2dp"
                        android:text="BEAUTY CARE"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:clickable="true"
                android:id="@+id/cleaningCardView"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView

                        android:src="@mipmap/clean"
                        android:layout_width="95dp"
                        android:layout_margin="4dp"
                        android:layout_gravity="center"
                        android:layout_height="90dp" />
                    <TextView
                        android:layout_margin="2dp"
                        android:text="CLEANING NEEDS"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>