<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">


        <FrameLayout
            android:layout_width="185dp"
            android:layout_height="185dp">


            <ImageView
                android:id="@+id/productImageView"
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:layout_margin="8dp"
                android:src="@mipmap/sample_product_image" />
            <TextView
                android:layout_margin="4dp"
                android:id="@+id/captionOfferProductTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_dark"
                android:padding="8dp"
                android:text="20% OFF"
                android:textColor="#ffff"
                android:textSize="16sp" />
        </FrameLayout>
    <LinearLayout
        android:layout_width="185dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="₹400"
            android:layout_marginLeft="50dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="₹500"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="@string/description"
        android:layout_marginLeft="4dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/detailProductAddButton"
        android:layout_margin="20dp"
        android:textSize="20dp"
        android:layout_width="110dp"
        android:background="@drawable/red_color_button_design"
        android:textColor="#ffff"
        android:layout_marginLeft="30dp"
        android:text="ADD    +"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/showplusMinusButtonLayout"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/ProductminusButton"
            android:layout_width="40dp"
            android:textSize="20dp"
            android:text="-"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ProductQuantityTextView"
            android:layout_width="wrap_content"
            android:text="0"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/ProductPlusButton"
            android:layout_width="40dp"
            android:textSize="20dp"
            android:text="+"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>