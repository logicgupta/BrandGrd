<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="About Us "
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_margin="8dp"
            android:textSize="34sp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="v1.0 "
            android:layout_margin="8dp"
            android:textSize="28sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:text="@string/aboutUs"
        android:padding="8dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:text="This Application provides easy modes of payment - Debit/Credit card , Cash-on-Delivery(COD) or e-wallet.It also allows to schedule delivery and Track Live Status of Order"
        android:padding="8dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/facebook"
        android:layout_width="50dp"
        android:layout_gravity="center"
        android:src="@mipmap/facebook_logo"
        android:layout_height="50dp" />
    <ImageView
        android:id="@+id/youTube"
        android:layout_width="50dp"
        android:layout_gravity="center"
        android:src="@mipmap/youtube_logo"
        android:layout_height="50dp" />


    <View
        android:layout_width="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:layout_height="2dp">
    </View>

    <TextView
        android:layout_width="match_parent"
        android:textSize="24sp"
        android:layout_margin="12dp"
        android:text="Organized By- BrandMore"
        android:textStyle="italic"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:textSize="24sp"
        android:text="Developed By - Logic Gupta"
        android:textStyle="italic"
        android:layout_height="wrap_content" />

</LinearLayout>